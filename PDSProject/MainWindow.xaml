<Window x:Class="PDSProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PDSProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="529" Width="349">
    <Grid Margin="0,0,2,0" Height="357" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Canvas x:Name="HostInfo" HorizontalAlignment="Left" Margin="20,115,0,182" Width="300" Background="#FFFFA4A4" Grid.ColumnSpan="2" MouseUp="HostInfo_MouseUp">
            <TextBlock x:Name="textName" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="10" FontWeight="Bold" Width="45"><Run Text="Name"/><Run Text=":"/></TextBlock>
            <TextBlock x:Name="textStatus" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="31" FontWeight="Bold" Width="45"><Run Text="Status"/><Run Text=":"/></TextBlock>
            <TextBlock x:Name="textNToInsert" Canvas.Left="60" TextWrapping="Wrap" Canvas.Top="10" Width="160"/>
            <TextBlock x:Name="textSToInsert" Canvas.Left="60" TextWrapping="Wrap" Canvas.Top="32" Width="160"/>
            <Image x:Name="HostImage" Height="50" Canvas.Left="240" Stretch="Fill" Width="50" RenderTransformOrigin="0.5,0.5" Canvas.Top="6" Source="Resources/defaultProfile.png"/>
        </Canvas>
        <Canvas x:Name="Body" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="253" Margin="20,189,0,-85" VerticalAlignment="Top" Width="300">
            <TextBox x:Name="WriteMessage" HorizontalAlignment="Left" Height="48" TextWrapping="Wrap" Text="Insert message to send..." VerticalAlignment="Top" Width="300"/>
            <Button x:Name="ButtonSend" Content="Send Message" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Click="ButtonSend_Click" Canvas.Left="95" Canvas.Top="59"/>
            <TextBlock x:Name="textWaiting" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" Canvas.Top="88"><Run Text="Wait for connection"/><Run Text="..."/></TextBlock>
            <TextBlock x:Name="textConnection" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="70" Canvas.Top="109" Text="Connection:" FontWeight="Bold"/>
            <TextBox x:Name="textCheckConnection" Height="23" Canvas.Left="85" TextWrapping="Wrap" Text="NOT CONNECTED" Canvas.Top="108" Width="195"/>
            <TextBlock x:Name="textMessageReceived" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="110" Canvas.Top="136" Text="Message Received" FontWeight="Bold" Canvas.Left="87"/>
            <TextBox x:Name="textInfoMessage" Height="86" Canvas.Left="10" TextWrapping="Wrap" Text="NO MESSAGE YET..." Canvas.Top="157" Width="280" />
        </Canvas>
        <Canvas x:Name="UserInfo" HorizontalAlignment="Left" Margin="20,30,0,267" Width="300" Background="#FFB6FF6C" Grid.ColumnSpan="2">
            <TextBlock x:Name="textUName" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="10" FontWeight="Bold" Width="45"><Run Text="Name"/><Run Text=":"/></TextBlock>
            <TextBlock x:Name="textUStatus" Canvas.Left="10" TextWrapping="Wrap" Canvas.Top="34" FontWeight="Bold" Width="45" RenderTransformOrigin="0.444,1.625"><Run Text="Status"/><Run Text=":"/></TextBlock>
            <CheckBox x:Name="checkUSBox" Content="Offline&#xD;&#xA;" Canvas.Left="55" Canvas.Top="36" RenderTransformOrigin="0.451,-0.733" Checked="CheckUSBox_Checked" Height="14"/>
            <TextBox x:Name="textUNInfo" Height="21" Canvas.Left="55" TextWrapping="Wrap" Canvas.Top="10" Width="166" TextChanged="TextUNInfo_TextChanged"/>
            <Image x:Name="ImageProfile" Height="50" Canvas.Left="239" Source=".\Resources\defaultProfile.png" Stretch="Fill" Width="50" Canvas.Top="5" MouseDown="Image_MouseDown"/>
        </Canvas>
        <TextBlock x:Name="textName_Copy" TextWrapping="Wrap" FontWeight="Bold" Grid.ColumnSpan="2" Margin="10,10,10,331" RenderTransformOrigin="1,7.625"><Run Text="Local user info"/><LineBreak/><Run/></TextBlock>
        <TextBlock x:Name="HostSelected" TextWrapping="Wrap" FontWeight="Bold" Grid.ColumnSpan="2" Margin="10,99,19,242" RenderTransformOrigin="1,7.625" Text="Host info"/>

    </Grid>
</Window>
